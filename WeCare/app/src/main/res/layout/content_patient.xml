<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.schopra.wecare.PatientActivity"
    tools:showIn="@layout/activity_patient">

        <!--For the Calling from icon: If you change this id, replace in utilities class file as well-->
        <EditText
            android:id="@+id/number"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Emergency Number"
            />

        <!-- Replace the save function in the Patient java file o save Shared Preferences data -->
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="saveDetails"
            android:text="Save number" />

</LinearLayout>

